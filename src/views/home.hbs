<div class="container">
    <h3 class="text-center text-white">Pokemon_world</h3>
    <div class="app-cont-pokew pt-1">

        <form action="/pokemon/show" method="POST">
            <div class="row mb-4">  
                <div class="col-4">
                    <p class=" ms-3 fs-5 text-white">amount of pokemon: <span class="badge bg-secondary">{{pokemons.count}}</span></p>
                </div>
            <div class="col-4">
                <input id="name" name="name" class="form-control form-control-sm" type="text" placeholder="Name / ID" aria-label=".form-control-sm example">
            </div>
            <div class="col-4">
                <button type="button" class="btn btn-light btn-sm" onclick="show_pokemon(0)">Search</button>
            </div>
            </div>
        </form>


        <div id="loader" class="text-center mt-5">
            <div class="spinner-grow mx-auto" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <div class="content-data w-100">
            <table class="table table-dark table-striped table-hover mb-3" style="width: 60%;margin:0 auto;">
                <thead>
                    <tr>
                        <th class="text-warning">#</th>
                        <th class="text-warning">Pokemon</th>
                        <th class="text-warning">name</th>
                        <th class="text-warning">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- {{{listpokemons pokemons.results}}} --}}
                </tbody>
            </table>
            
            <nav aria-label="Page navigation example">
                <ul class="pagination d-flex justify-content-center">
                    <li class="page-item navprev">
                        <a onclick="listprevpokemons('prev')" class="page-link bg-dark cursor">Previous</a>
                    </li>
                    <li class="page-item navnext">
                        <a onclick="listprevpokemons('next')" class="page-link bg-dark cursor">Next</a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
</div>